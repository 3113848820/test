<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiao.mall.mapper.ProductMapper">
    <insert id="add" parameterType="com.xiao.mall.dom.Product">
        insert into product(sname,price,num) values (#{sname},#{price},#{num})
    </insert>
    <update id="updateById" parameterType="com.xiao.mall.dom.Product">
        update product set sname=#{sname},price=#{price},num=#{num} where id=#{id}
    </update>
    <select id="findLikeName" resultType="com.xiao.mall.dom.Product">
        select * from product where sname like concat('%',#{sname},'%')
    </select>
</mapper>